<Page
    x:Class="BooticeWinUI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Uid="Settings_Title" Text="Settings" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,20" />

        <Grid Grid.Row="1">
            <Grid x:Name="MainLayoutGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <!-- Settings List (Left / Top) -->
                <StackPanel Grid.Column="0" Spacing="20">
                    <!-- Appearance Section -->
                    <StackPanel Spacing="10">
                        <TextBlock x:Uid="Settings_Appearance" Text="Appearance" Style="{StaticResource SubtitleTextBlockStyle}" />
                        
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE790;" FontSize="16" />
                                        <TextBlock x:Uid="Settings_Theme_Title" Text="App Theme" FontWeight="SemiBold" />
                                    </StackPanel>
                                    <TextBlock x:Uid="Settings_Theme_Desc" Text="Select which app theme to display" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" FontSize="12" Margin="24,0,0,0" />
                                </StackPanel>
                                
                                <ComboBox x:Name="ThemeComboBox" Grid.Column="1" SelectionChanged="ThemeComboBox_SelectionChanged" MinWidth="150">
                                    <ComboBoxItem x:Uid="Settings_Theme_Light" Content="Light" Tag="Light" />
                                    <ComboBoxItem x:Uid="Settings_Theme_Dark" Content="Dark" Tag="Dark" />
                                    <ComboBoxItem x:Uid="Settings_Theme_System" Content="Use system setting" Tag="Default" />
                                </ComboBox>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Separator for Narrow Mode -->
                <Border x:Name="SeparatorLine" Grid.Row="1" Grid.Column="0" Height="1" Background="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="0,20,0,0" Visibility="Collapsed" />

                <!-- About Section (Right / Bottom) -->
                <StackPanel x:Name="AboutPanel" Grid.Column="1" Spacing="10">
                    <TextBlock x:Uid="Settings_About" Text="About this app" Style="{StaticResource SubtitleTextBlockStyle}" />
                    
                    <StackPanel Spacing="5">
                        <TextBlock Text="Bootice WinUI" FontWeight="Bold" FontSize="16" />
                        <TextBlock x:Name="VersionText" Text="1.0.0.0" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                        <TextBlock Text="Â© 2025 Bootice Dev. All rights reserved." Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                    </StackPanel>

                    <HyperlinkButton x:Uid="Settings_License" Content="License Terms" NavigateUri="https://github.com/yourrepo/license" HorizontalAlignment="Left" />
                    <HyperlinkButton x:Uid="Settings_Privacy" Content="Privacy Statement" NavigateUri="https://github.com/yourrepo/privacy" HorizontalAlignment="Left" />
                    <HyperlinkButton x:Uid="Settings_Feedback" Content="Send Feedback" NavigateUri="https://github.com/yourrepo/issues" HorizontalAlignment="Left" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>