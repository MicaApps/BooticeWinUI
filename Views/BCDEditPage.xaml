<Page
    x:Class="BooticeWinUI.Views.BcdEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:BooticeWinUI.Models"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Uid="Bcd_Title" Text="BCD Edit" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,20" />

        <!-- BCD File Selection -->
        <StackPanel Grid.Row="1" Spacing="10" Margin="0,0,0,15">
            <RadioButtons x:Name="BcdSourceRadio" SelectionChanged="BcdSourceRadio_SelectionChanged">
                <RadioButton x:Uid="Bcd_System" Content="System BCD (Current System)" IsChecked="True" Tag="System" />
                <RadioButton x:Uid="Bcd_File" Content="Other BCD file" Tag="File" />
            </RadioButtons>
            
            <Grid x:Name="FileSelectionGrid" ColumnSpacing="10" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox x:Uid="Bcd_FilePath" x:Name="BcdFilePathBox" PlaceholderText="Select a BCD file..." IsReadOnly="True" />
                <Button x:Uid="Common_Browse" Content="..." Click="BrowseBcd_Click" Grid.Column="1" />
            </Grid>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="2" ColumnSpacing="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Entry List -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <ListView x:Name="BcdEntriesList" SelectionChanged="BcdEntriesList_SelectionChanged" BorderThickness="1" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" CornerRadius="4">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:BcdEntry">
                            <StackPanel Padding="0,5">
                                <TextBlock Text="{x:Bind Description}" FontWeight="SemiBold" />
                                <TextBlock Text="{x:Bind Identifier}" FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                <CommandBar Grid.Row="1" DefaultLabelPosition="Right" IsOpen="False">
                    <AppBarButton x:Uid="Bcd_Add" Icon="Add" Label="Add" Click="AddEntry_Click" />
                    <AppBarButton x:Uid="Bcd_Delete" Icon="Delete" Label="Delete" Click="DeleteEntry_Click" />
                    <AppBarButton x:Uid="Bcd_Up" Label="Up" Click="MoveUp_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE74A;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton x:Uid="Bcd_Down" Label="Down" Click="MoveDown_Click">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE74B;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>
            </Grid>

            <!-- Entry Details / Edit Form -->
            <ScrollViewer Grid.Column="1">
                <StackPanel Spacing="15" x:Name="EntryDetailsPanel" Visibility="Collapsed">
                    <TextBlock x:Uid="Bcd_Details" Text="Entry Details" Style="{StaticResource SubtitleTextBlockStyle}" />
                    
                    <TextBox x:Uid="Bcd_Description" Header="Description" Text="{x:Bind SelectedEntry.Description, Mode=TwoWay}" />
                    
                    <Grid ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Uid="Bcd_DeviceType" Header="Device Type" HorizontalAlignment="Stretch" SelectedIndex="0">
                            <ComboBoxItem x:Uid="Bcd_DeviceType_Partition" Content="Partition" />
                            <ComboBoxItem x:Uid="Bcd_DeviceType_Ramdisk" Content="Ramdisk" />
                            <ComboBoxItem x:Uid="Bcd_DeviceType_File" Content="File" />
                        </ComboBox>
                        <TextBox x:Uid="Bcd_DeviceFile" Header="Device / File" Grid.Column="1" Text="{x:Bind SelectedEntry.Device, Mode=TwoWay}" />
                    </Grid>

                    <TextBox x:Uid="Bcd_Path" Header="Application Path" Text="{x:Bind SelectedEntry.Path, Mode=TwoWay}" />
                    
                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <TextBox x:Uid="Bcd_Locale" Header="Locale" Width="150" Text="{x:Bind SelectedEntry.Locale, Mode=TwoWay}" />
                        <CheckBox x:Uid="Bcd_InheritGlobal" Content="Inherit Global Settings" Margin="0,28,0,0" />
                    </StackPanel>
                    
                    <Expander x:Uid="Bcd_Advanced" Header="Advanced Options" HorizontalAlignment="Stretch">
                        <StackPanel Spacing="10">
                            <CheckBox x:Uid="Bcd_AllowUnsigned" Content="Allow unsigned drivers (nointegritychecks)" />
                            <CheckBox x:Uid="Bcd_Debug" Content="Debug mode (debug)" />
                            <CheckBox x:Uid="Bcd_SafeMode" Content="Safe mode (safeboot)" />
                            <CheckBox x:Uid="Bcd_WinPE" Content="WinPE mode (winpe)" />
                        </StackPanel>
                    </Expander>

                    <Button x:Uid="Bcd_Save" Content="Save Current Entry" Style="{StaticResource AccentButtonStyle}" Click="SaveEntry_Click" HorizontalAlignment="Right" />
                </StackPanel>
            </ScrollViewer>
            
            <TextBlock x:Uid="Common_SelectEntry" x:Name="NoSelectionText" Grid.Column="1" Text="Select an entry to edit" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
        </Grid>

        <!-- Status Bar -->
        <InfoBar x:Name="StatusInfoBar" Grid.Row="3" IsOpen="False" Margin="0,10,0,0" />
    </Grid>
</Page>
